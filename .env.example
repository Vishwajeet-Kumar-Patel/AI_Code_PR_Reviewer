# ============================================
# AI Code Review System - Environment Variables
# ============================================
# SECURITY WARNING: NEVER commit the actual .env file to version control!
# This is only a template. Copy to .env and fill in your actual values.
#
# Generate secure secrets using:
# - Linux/Mac: openssl rand -hex 32
# - Python: python -c "import secrets; print(secrets.token_hex(32))"
# ============================================

# GitHub Configuration
# Get token from: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_CLIENT_ID=your_oauth_client_id_optional
GITHUB_CLIENT_SECRET=your_oauth_client_secret_optional

# OpenAI Configuration (Option 1 - Recommended)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration (Option 2 - Alternative)
# Get API key from: https://makersuite.google.com/app/apikey
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-pro

# AI Provider (use "openai" or "gemini")
AI_PROVIDER=openai

# JWT & Security Configuration
# CRITICAL: Generate a strong random secret key!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=REPLACE_WITH_STRONG_RANDOM_SECRET_MINIMUM_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Database Configuration (PostgreSQL)
# IMPORTANT: Use strong passwords in production!
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/ai_code_review
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_code_review
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_if_needed
CACHE_TTL=3600

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_COLLECTION=code_best_practices

# Application Configuration
APP_NAME=AI Code Review System
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
MAX_WORKERS=4

# Review Configuration
MAX_FILE_SIZE_MB=5
SUPPORTED_LANGUAGES=["python","javascript","typescript","java","go","rust","cpp","csharp","ruby","php"]
COMPLEXITY_THRESHOLD=10
SECURITY_SCAN_ENABLED=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Paths
KNOWLEDGE_BASE_PATH=./app/knowledge_base
LOGS_PATH=./logs
DATA_PATH=./data
